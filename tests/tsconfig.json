{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "outDir": "./lib",
        "lib": [
          "es2017", "dom"
        ],
        "plugins": [
            { "transform": "ts-expressions" }
        ]
    },
    "include": [
        "src/**/*"
    ]
}